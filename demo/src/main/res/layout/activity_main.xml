<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center" android:orientation="vertical" android:padding="8dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/intro" />

    <Button
        android:id="@+id/normalApiButton" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Try without root privilege" />

    <Button
        android:id="@+id/rootButton" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Try using root privilege" />

    <ProgressBar
        android:id="@+id/progressBar" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:indeterminate="true" android:visibility="gone" />
</LinearLayout>
